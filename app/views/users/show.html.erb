<% provide(:title, @user.email) %>
<h1><%= @user.name %>, <%= @user.email %></h1>
<div class="row">
	<div class="span8">
		<% if @user.schedules.any? %>
			<h3>Schedule</h3>
			<table>
			<tr>
			<% counter = 1 %>
			<%= @schedules.each do |sched, i| %>
				<td>Day <%= counter %></td>
				<% counter+=1 %>
			<% end %>
			</tr>
			</table>
		<% else %>
			<h4>No schedule created yet</h4>
		<% end %>
	</div>
</div>
